{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "types": ["chrome", "node"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", ".i18n/schema.d.ts"],
  "exclude": ["node_modules"]
}
