{
  "name": "@99mini/i18n-shared",
  "version": "1.0.6",
  "description": "Shared types and scripts for i18n packages",
  "author": "99mini",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://www.npmjs.com/package/@99mini/i18n-shared",
  "repository": {
    "type": "git",
    "url": "https://github.com/99mini/chrome-extension-i18n.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --watch --config tsup.config.ts",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "echo 'vitest run'",
    "test:watch": "echo 'vitest watch'",
    "release": "pnpm run clean && pnpm run build && pnpm publish --no-git-checks --access public",
    "version:patch": "pnpm version patch",
    "version:minor": "pnpm version minor",
    "version:major": "pnpm version major"
  }
}
