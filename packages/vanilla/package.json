{
  "name": "@99mini/i18n-vanilla",
  "version": "1.0.4",
  "description": "Vanilla JS implementation for Chrome Extension i18n library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://www.npmjs.com/package/@99mini/i18n-vanilla",
  "repository": {
    "type": "git",
    "url": "https://github.com/99mini/chrome-extension-i18n.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "echo 'vitest run'",
    "test:watch": "echo 'vitest watch'",
    "release": "pnpm run clean && pnpm run build && pnpm publish --no-git-checks --access public",
    "version:patch": "pnpm version patch",
    "version:minor": "pnpm version minor",
    "version:major": "pnpm version major"
  },
  "keywords": [
    "i18n",
    "chrome-extension",
    "internationalization",
    "vanilla-js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@99mini/i18n": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
