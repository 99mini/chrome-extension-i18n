{
  "name": "@99mini/i18n",
  "version": "1.0.9",
  "description": "Core functionality for Chrome Extension i18n library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://www.npmjs.com/package/@99mini/i18n",
  "repository": {
    "type": "git",
    "url": "https://github.com/99mini/chrome-extension-i18n.git"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --watch --config tsup.config.ts",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "echo 'vitest run'",
    "test:watch": "echo 'vitest watch'",
    "release": "pnpm publish --no-git-checks --access public",
    "version:patch": "pnpm version patch",
    "version:minor": "pnpm version minor",
    "version:major": "pnpm version major"
  },
  "keywords": [
    "i18n",
    "chrome-extension",
    "internationalization"
  ],
  "author": "99mini",
  "license": "MIT",
  "devDependencies": {
    "@99mini/i18n-shared": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
