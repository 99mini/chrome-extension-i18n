{
  "name": "@99mini/i18n-react",
  "version": "1.0.0",
  "description": "React components and hooks for Chrome Extension i18n library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run"
  },
  "keywords": [
    "i18n",
    "chrome-extension",
    "internationalization",
    "react"
  ],
  "author": "99mini",
  "license": "ISC",
  "dependencies": {
    "@99mini/i18n-core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
