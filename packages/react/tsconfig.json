{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/env.d.ts", "../../type.d.ts", "eslint.config.js"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "react": ["../../node_modules/react"],
      "react-dom": ["../../node_modules/react-dom"],
      "@types/react": ["../../node_modules/@types/react"],
      "@types/react-dom": ["../../node_modules/@types/react-dom"]
    }
  }
}
