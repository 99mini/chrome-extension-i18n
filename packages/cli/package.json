{
  "name": "@99mini/i18n-cli",
  "version": "1.0.0",
  "description": "Chrome Extension i18n CLI",
  "main": "dist/bin.js",
  "types": "dist/index.d.ts",
  "bin": {
    "i18n-cli": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/bin.ts --format cjs --dts && chmod +x dist/bin.js",
    "dev": "tsup src/index.ts src/bin.ts --format cjs --dts --watch",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "test": "vitest watch",
    "test:ci": "vitest run",
    "release": "pnpm run build && pnpm publish"
  },
  "keywords": [
    "chrome-extension",
    "i18n",
    "cli"
  ],
  "author": "99mini",
  "license": "MIT",
  "dependencies": {
    "@99mini/i18n": "workspace:*",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
