{
  "name": "@99mini/i18n-cli",
  "version": "1.0.3",
  "description": "Chrome Extension i18n CLI",
  "main": "dist/bin.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "i18n-cli": "./dist/bin.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "chrome-extension",
    "i18n",
    "cli"
  ],
  "author": "99mini",
  "license": "MIT",
  "homepage": "https://www.npmjs.com/package/@99mini/i18n-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/99mini/chrome-extension-i18n.git"
  },
  "scripts": {
    "build": "tsup src/index.ts src/bin.ts --format cjs --dts && chmod +x dist/bin.js",
    "dev": "tsup src/index.ts src/bin.ts --format cjs --dts --watch",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src",
    "test": "echo 'vitest run'",
    "test:watch": "echo 'vitest watch'",
    "release": "pnpm run clean && pnpm run build && pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@99mini/i18n": "workspace:*",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
